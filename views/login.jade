extends layout

block content
  .container
    .row.justify-content-center.mt-5
      .col-lg-4.col-md-6.col-sm-8.col-10
        .border.border-secondary.rounded.p-4.bg-light.shadow-lg.mt-5
          .forform
            h1.text-center Log In
            form#loginForm(action='/login', method='POST')
              .form-group
                label(for='email') Email:
                input#email.form-control(type='email', name='email', required='')
                span#emailError.error
              .form-group
                label(for='password') Password:
                input#password.form-control(type='password', name='password', required='')
                span#passwordError.error
              .mt-3
                button.btn.btn-primary(type='submit') Submit 
                a.btn.btn-danger.float-end(href='/') Cancel
