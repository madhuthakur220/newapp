extends layout

block content
  .container
     .row.justify-content-center.mt-5
        .col-lg-4.col-md-6.col-sm-8.col-10
          .border.border-secondary.rounded.p-4.bg-light.shadow-lg.mt-5
            .forform
              h1.text-center Edit Record
              form(action=`/edit/${user._id}` method='POST')
                .form-group
                  label(for='fname') First Name
                  input.form-control(type='text' name='fname' value=user.fname required)
                .form-group
                  label(for='lname') Last Name
                  input.form-control(type='text' name='lname' value=user.lname required)
                .form-group
                  label(for='email') Email
                  input.form-control(type='email' name='email' value=user.email required)
                .d-flex.m-3
                button.btn.btn-primary(type='submit') Save Changes
                a.btn.btn-danger.float-end(href='/viewrecord') Cancel

